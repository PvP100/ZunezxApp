<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                app:layout_constraintBottom_toTopOf="@+id/view_register"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/tv_dang_ky_regis"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textSize="36sp"
                android:textColor="@color/white"
                android:text="Đăng ký"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view_register"
                app:layout_constraintTop_toBottomOf="@+id/tv_dang_ky_regis"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/login_background"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Họ"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ho_regis"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="@+id/view_register"
                android:id="@+id/tv_ho_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/edt_ho_regis"
                android:background="@drawable/edt_login_regis_background"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_ho_regis"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@+id/tv_ho_regis"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ten_regis"
                android:id="@+id/tv_ten_regis"
                android:text="Tên"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginRight="20dp"
                android:background="@drawable/edt_login_regis_background"
                app:layout_constraintTop_toTopOf="@+id/edt_ho_regis"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/edt_ho_regis"
                app:layout_constraintRight_toRightOf="@+id/view_register"
                android:id="@+id/edt_ten_regis"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Ngày sinh"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ho_regis"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_ho_regis"
                android:id="@+id/tv_username_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/edt_birthday_regis"
                android:background="@drawable/edt_login_regis_background"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_username_regis"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@+id/tv_username_regis"
                app:layout_constraintLeft_toLeftOf="@+id/spinner_gender_regis"
                android:id="@+id/tv_gender_regis"
                android:text="Giới tính"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:entries="@array/gender"
                app:layout_constraintBottom_toBottomOf="@+id/edt_birthday_regis"
                android:layout_marginRight="20dp"
                android:background="@drawable/edt_login_regis_background"
                app:layout_constraintTop_toTopOf="@+id/edt_birthday_regis"
                android:layout_marginLeft="20dp"
                app:layout_constraintLeft_toRightOf="@+id/edt_birthday_regis"
                app:layout_constraintRight_toRightOf="@+id/view_register"
                android:id="@+id/spinner_gender_regis"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Email"
                app:layout_constraintTop_toBottomOf="@+id/edt_birthday_regis"
                android:id="@+id/tv_email_regis"
                app:layout_constraintLeft_toLeftOf="@id/tv_ho_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_login_regis_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_email_regis"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ho_regis"
                app:layout_constraintRight_toRightOf="@+id/edt_ten_regis"
                android:id="@+id/edt_email_regis"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Địa chỉ"
                app:layout_constraintTop_toBottomOf="@+id/edt_email_regis"
                android:id="@+id/tv_address_regis"
                app:layout_constraintLeft_toLeftOf="@id/tv_ho_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_login_regis_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_address_regis"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ho_regis"
                app:layout_constraintRight_toRightOf="@+id/edt_ten_regis"
                android:id="@+id/edt_address_regis"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Mật khẩu"
                app:layout_constraintTop_toBottomOf="@+id/edt_address_regis"
                android:id="@+id/tv_password_regis"
                app:layout_constraintLeft_toLeftOf="@id/tv_ho_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_login_regis_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_password_regis"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ho_regis"
                app:layout_constraintRight_toRightOf="@+id/edt_ten_regis"
                android:id="@+id/edt_password_regis"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Nhập lại mật khẩu"
                app:layout_constraintTop_toBottomOf="@+id/edt_password_regis"
                android:id="@+id/tv_re_password_regis"
                app:layout_constraintLeft_toLeftOf="@id/tv_ho_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_login_regis_background"
                app:layout_constraintTop_toBottomOf="@+id/tv_re_password_regis"
                app:layout_constraintLeft_toLeftOf="@+id/edt_ho_regis"
                app:layout_constraintRight_toRightOf="@+id/edt_ten_regis"
                android:id="@+id/edt_re_password_regis"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_re_password_regis"
                app:layout_constraintRight_toRightOf="@+id/edt_re_password_regis"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Đăng ký"
                app:layout_constraintLeft_toLeftOf="@+id/edt_re_password_regis"
                android:background="@drawable/btn_login_background"
                android:id="@+id/btn_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                app:layout_constraintRight_toLeftOf="@+id/tv_dang_nhap_regis"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:chainUseRtl="true"
                android:id="@+id/tv_da_co_tai_khoan_regis"
                android:text="Đã có tài khoản? "
                app:layout_constraintTop_toBottomOf="@+id/btn_register"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="#760000"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:chainUseRtl="true"
                app:layout_constraintTop_toTopOf="@+id/tv_da_co_tai_khoan_regis"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Đăng nhập"
                android:id="@+id/tv_dang_nhap_regis"
                app:layout_constraintLeft_toRightOf="@+id/tv_da_co_tai_khoan_regis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>