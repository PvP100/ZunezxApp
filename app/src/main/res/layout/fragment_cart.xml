<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            app:title="Giỏ hàng"
            app:navigationIcon="@drawable/ic_back_black"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar_cart"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_cart"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_tong_title_cart"
            tools:listitem="@layout/cart_item"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tv_tong_title_cart"
            android:layout_marginBottom="10dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/btn_mua_hang_cart"
            app:layout_constraintLeft_toLeftOf="@+id/btn_mua_hang_cart"
            android:text="Tổng: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tong_price_cart"
            app:layout_constraintRight_toRightOf="@+id/btn_mua_hang_cart"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@+id/tv_tong_title_cart"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_mua_hang_cart"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/btn_login_background"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            android:text="Mua hàng"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintBottom_toTopOf="@+id/tv_tong_title_cart"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_cart"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/layout_check_cart"
            android:layout_width="match_parent"
            android:layout_height="0dp" >

            <TextView
                android:layout_marginTop="25dp"
                android:textSize="30sp"
                android:text="Giỏ hàng trống"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tv_check_gio_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>