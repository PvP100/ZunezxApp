<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_background_profile"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/background_profile"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintVertical_chainStyle="packed"
            app:chainUseRtl="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"
            android:src="@drawable/zune_logo"
            app:layout_constraintBottom_toTopOf="@+id/tv_name_profile"
            app:layout_constraintTop_toTopOf="@+id/view_background_profile"
            app:layout_constraintRight_toRightOf="@+id/view_background_profile"
            app:layout_constraintLeft_toLeftOf="@+id/view_background_profile"
            android:id="@+id/img_ava_profile"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <ImageView
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_logout"
            android:id="@+id/ic_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="@+id/img_ava_profile"
            app:layout_constraintLeft_toLeftOf="@+id/img_ava_profile"
            app:layout_constraintTop_toBottomOf="@+id/img_ava_profile"
            android:textSize="24sp"
            android:id="@+id/tv_name_profile"
            app:layout_constraintBottom_toTopOf="@+id/btn_chinh_sua_ho_so"
            android:textColor="@color/white"
            android:text="Phạm Việt Phong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btn_chinh_sua_ho_so"
            app:layout_constraintBottom_toBottomOf="@+id/view_background_profile"
            android:textAllCaps="false"
            android:background="@drawable/custom_btn_chinh_ho_so"
            app:layout_constraintRight_toRightOf="@+id/tv_name_profile"
            app:layout_constraintLeft_toLeftOf="@+id/tv_name_profile"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_profile"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="Chỉnh sửa hồ sơ"
            android:layout_width="122dp"
            android:layout_height="23dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>