<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_background_profile_change_password"
            android:background="@drawable/background_profile_change_password"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="330dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_ava_profile_change_password"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:src="@drawable/zune_logo"
            app:layout_constraintBottom_toBottomOf="@+id/view_background_profile_change_password"
            app:layout_constraintTop_toTopOf="@+id/view_background_profile_change_password"
            app:layout_constraintRight_toRightOf="@+id/view_background_profile_change_password"
            app:layout_constraintLeft_toLeftOf="@+id/view_background_profile_change_password"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:textColor="@color/white"
            android:textSize="24dp"
            android:text="Phạm Việt Phong"
            app:layout_constraintBottom_toBottomOf="@+id/view_background_profile_change_password"
            app:layout_constraintRight_toRightOf="@+id/img_ava_profile_change_password"
            app:layout_constraintLeft_toLeftOf="@+id/img_ava_profile_change_password"
            app:layout_constraintTop_toBottomOf="@+id/img_ava_profile_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@drawable/ic_back"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/view_background_profile_change_password"
            app:layout_constraintLeft_toLeftOf="@+id/view_background_profile_change_password"
            android:id="@+id/ic_back_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_old_password"
            android:text="Mật khẩu cũ"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/edt_change_pass_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_old_password"
            android:id="@+id/edt_old_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_new_password"
            android:text="Mật khẩu mới"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_old_password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/edt_change_pass_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_new_password"
            android:id="@+id/edt_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_re_new_password"
            android:text="Nhập lại mật khẩu mới"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_new_password"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/edt_change_pass_background"
            app:layout_constraintTop_toBottomOf="@+id/tv_re_new_password"
            android:id="@+id/edt_re_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            app:layout_constraintBottom_toTopOf="@+id/view_background_profile_change_password"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:text="Đổi mật khẩu"
            android:background="@drawable/btn_login_background"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_re_new_password"
            android:id="@+id/btn_change_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>