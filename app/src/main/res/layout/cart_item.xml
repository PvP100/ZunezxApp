<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/swipe_to_delete"
        app:mode="same_level"
        app:dragEdge="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:background="#FF0000"
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="match_parent" >

            <TextView
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_cart"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/img_ava_detail"
                    android:id="@+id/img_product_cart"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginRight="50dp"
                app:layout_constraintRight_toLeftOf="@+id/tv_price_cart"
                android:id="@+id/tv_product_name_cart_item"
                app:layout_constraintTop_toTopOf="@+id/cardview_cart"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/cardview_cart"
                android:text="NISHIKIGOI SHIRT"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_size_title_cart"
                app:layout_constraintLeft_toLeftOf="@+id/tv_product_name_cart_item"
                app:layout_constraintBottom_toBottomOf="@+id/cardview_cart"
                android:text="Size: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:text="L"
                app:layout_constraintTop_toTopOf="@+id/tv_size_title_cart"
                app:layout_constraintLeft_toRightOf="@+id/tv_size_title_cart"
                android:id="@+id/tv_size_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_price_cart"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/tv_product_name_cart_item"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/black"
                android:text="650,000Ä‘"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_minus_cart_item"
                app:layout_constraintRight_toLeftOf="@+id/tv_count_product_cart_item"
                app:layout_constraintTop_toTopOf="@+id/ic_minus_cart_item"
                android:src="@drawable/ic_plus"
                android:id="@+id/ic_plus_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tv_count_product_cart_item"
                app:layout_constraintBottom_toBottomOf="@+id/ic_minus_cart_item"
                app:layout_constraintTop_toTopOf="@+id/ic_minus_cart_item"
                app:layout_constraintRight_toLeftOf="@+id/ic_minus_cart_item"
                android:textColor="@color/black"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/ic_minus"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/ic_minus_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</layout>