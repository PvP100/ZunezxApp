<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            app:navigationIcon="@drawable/ic_back_black"
            app:title="Xác nhận đơn hàng"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Giỏ hàng"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_confirm"
            android:id="@+id/tv_cart_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/cart_item"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_cart_confirm"
            android:id="@+id/rcv_confirm"
            android:layout_width="match_parent"
            android:layout_height="360dp" />

        <View
            android:id="@+id/line_confirm"
            android:background="#EFEFEF"
            app:layout_constraintTop_toBottomOf="@+id/rcv_confirm"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_confirm"
            android:src="@drawable/ic_location"
            android:id="@+id/ic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_thong_tin_nhan_hang"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ic_location"
            app:layout_constraintTop_toTopOf="@+id/ic_location"
            app:layout_constraintLeft_toRightOf="@+id/ic_location"
            android:text="Thông tin nhận hàng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_thong_tin_nhan_hang"
            app:layout_constraintTop_toBottomOf="@+id/tv_thong_tin_nhan_hang"
            android:text="Khách hàng: "
            android:id="@+id/tv_khach_hang_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_customer_name_confirm"
            app:layout_constraintTop_toTopOf="@+id/tv_khach_hang_confirm"
            app:layout_constraintLeft_toRightOf="@+id/tv_khach_hang_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address_confirm"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_khach_hang_confirm"
            app:layout_constraintTop_toBottomOf="@+id/tv_khach_hang_confirm"
            android:textColor="@color/black"
            android:text="Địa chỉ: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_address_detail"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_address_confirm"
            app:layout_constraintLeft_toLeftOf="@+id/tv_customer_name_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="@+id/btn_dat_hang_confirm"
            app:layout_constraintBottom_toTopOf="@+id/btn_dat_hang_confirm"
            android:id="@+id/tv_total_confirm"
            android:text="Tổng: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_total"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="@+id/tv_total_confirm"
            app:layout_constraintRight_toRightOf="@+id/btn_dat_hang_confirm"
            android:text="0đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_dat_hang_confirm"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/btn_login_background"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Đặt hàng"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>