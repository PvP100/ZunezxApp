<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:background="@drawable/search_view_background"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toLeftOf="@+id/ic_cart_home"
            android:id="@+id/search_view_home"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="42dp" />

        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/search_view_home"
            app:layout_constraintTop_toTopOf="@+id/search_view_home"
            android:src="@drawable/ic_cart_home"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/ic_cart_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            app:layout_constraintRight_toLeftOf="@+id/rcv_all_home"
            android:layout_marginRight="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/search_view_home"
            app:layout_constraintBottom_toBottomOf="@+id/rcv_all_home"
            app:layout_constraintTop_toTopOf="@+id/rcv_all_home"
            android:id="@+id/tv_all_home"
            android:text="Sản phẩm mới"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/category_title_item"
            app:layout_constraintRight_toRightOf="@id/ic_cart_home"
            android:textColor="#760000"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_all_home"
            android:id="@+id/rcv_all_home"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/search_view_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh_home"
            app:layout_constraintTop_toBottomOf="@+id/rcv_all_home"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp" >
            <androidx.recyclerview.widget.RecyclerView
                android:padding="10dp"
                android:id="@+id/rcv_home"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>