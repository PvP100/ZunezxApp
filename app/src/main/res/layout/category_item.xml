<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="10dp"
        android:background="@drawable/background_cate_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_category_item"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_search"
                android:src="@drawable/img_ava_detail"
                android:layout_width="140dp"
                android:layout_height="140dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:gravity="center"
            android:id="@+id/tv_product_name_category_item"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#8C0000"
            android:text="GD 지 드래곤 - BLACK"
            app:layout_constraintLeft_toLeftOf="@+id/cardview_category_item"
            app:layout_constraintRight_toRightOf="@+id/cardview_category_item"
            app:layout_constraintTop_toBottomOf="@+id/cardview_category_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_price_search"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_product_name_category_item"
            android:textColor="#8C0000"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="@+id/cardview_category_item"
            app:layout_constraintLeft_toLeftOf="@+id/cardview_category_item"
            android:text="450,000đ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>